<body>
    <a href="" class="msp-add btn btn-primary"
        style="background-color: green; border:0px; box-shadow: 0 0 5px rgb(22, 231, 22);" data-bs-toggle="modal"
        data-bs-target="#mspadd" x>
        Add Product
    </a>
    <div class="modal fade" id="mspadd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add Crop</h1>
                    <button type="button"
                        style="background-color: transparent; box-shadow: 0 0 0px;margin-right:-10px;margin-top: 0px;"
                        class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/addproduct" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Crop Name:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                                placeholder="Enter Crop Name" name="name">
                        </div> <br>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Crop Price:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                                placeholder="Enter Crop Price" name="price">
                        </div> <br>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Crop Picture Url:</label>
                            <input type="tect" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                                name="image">
                        </div> <br>
                        <button class="btn btn-primary"
                            style="background-color: green; border:0px; box-shadow: 0 0 5px rgb(22, 231, 22);"
                            type="submit">
                            Submit
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
